<header class="header">
  <div class="container">
    <div class="row">
      <div class="col-lg-2">
        <div class="header__logo">
          <%= link_to image_tag("galaxy-logo.png", class: "lazy hidden-xs hidden-sm loaded"), root_path %>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="header__nav">
          <nav class="header__menu mobile-menu">
            <ul>
              <li class="active"><%= link_to t(".homepage"), root_path %></li>
              <li><a href="./categories.html">Categories <i class="fa-solid fa-chevron-down"></i></span></a>
              <ul class="dropdown">
                <li><a href="./categories.html">Categories</a></li>
                <li><a href="./anime-details.html">Anime Details</a></li>
                <li><a href="./anime-watching.html">Anime Watching</a></li>
                <li><a href="./blog-details.html">Blog Details</a></li>
                <li><a href="./signup.html">Sign Up</a></li>
                <li><a href="./login.html">Login</a></li>
              </ul>
            </li>
            <li><a href="./blog.html">Our Blog</a></li>
            <li><a href="#">Contacts</a></li>
          </ul>
        </nav>
      </div>
    </div>
    <div class="col-lg-2">
      <div class="header__right">
        <a href="#" class="search-switch"><i class="fa-solid fa-magnifying-glass"></i></a>
        <% if logged_in? %>
          <span><i class="fa-solid fa-user"></i> Hi demo</span>
          <ul class="dropdown">
            <li><%= link_to t(".edit"), "#" %></li>
            <li>
              <%= link_to t(".log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <%= link_to login_path do %>
          <i class="fa-solid fa-user"></i>
        <% end %>
      <% end %>
      <%= link_to t(".english"), locale: :en %>
      <%= link_to t(".vietnamese"), locale: :vi %>
    </div>
  </div>
</div>
<div id="mobile-menu-wrap"></div>
</div>
</header>
