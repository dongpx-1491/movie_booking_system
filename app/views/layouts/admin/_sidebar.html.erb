<div class="sidebar">
  <div class="logo-details">
    <i class='bx bxs-camera-movie' ></i>
    <span class="logo_name">Admin page</span>
  </div>
  <ul class="nav-links">
    <li>
      <%= link_to admin_root_path, class: "active" do %>
        <i class='bx bx-grid-alt' ></i>
        <span class="links_name"><%= t ".dashboard" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_categories_path, class: "nav_link" do %>
        <i class='bx bxs-category-alt'></i>
        <span class="links_name"><%= t ".genres" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_movies_path, class: "nav_link" do %>
        <i class='bx bxs-movie-play' ></i>
        <span class="links_name"><%= t ".movies" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_show_times_path, class: "nav_link" do %>
        <i class='bx bxs-slideshow'></i>
        <span class="links_name"><%= t ".shows" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_cinemas_path, class: "nav_link" do %>
        <i class='bx bxs-building-house' ></i>
        <span class="links_name"><%= t ".cinemas" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_payments_path, class: "nav_link" do %>
        <i class='bx bx-pie-chart-alt-2' ></i>
        <span class="links_name"><%= t ".payments" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to admin_users_path, class: "nav_link" do %>
        <i class='bx bxs-user-account'></i>
        <span class="links_name"><%= t ".users" %></span>
      <% end %>
    </li>
    <li class="log_out">
      <%= link_to logout_path, method: :delete do %>
        <i class='bx bx-log-out'></i>
        <span class="links_name"><%= t(".log_out")%></span>
      <% end %>
    </li>
  </ul>
</div>
