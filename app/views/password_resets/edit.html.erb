<% provide :title, t(".reset_password") %>
<section class="signup spad">
  <div class="container">
    <div class="row justify-content-center">
        <div class="login__form edit_form">
          <h3 class="tex_align_center"><%= t ".reset_password" %></h3>
            <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <%= hidden_field_tag :email, @user.email %>
          <div class="input__item">
            <%= f.password_field :password, placeholder: t(".password") %>
            <span class="icon_lock"><i class="fa-solid fa-lock"></i></span>
          </div>
          <div class="input__item">
            <%= f.password_field :password_confirmation, placeholder: t(".confirm_password") %>
            <span class="icon_lock"><i class="fa-solid fa-lock"></i></span>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.submit t(".submit"), class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</section>
