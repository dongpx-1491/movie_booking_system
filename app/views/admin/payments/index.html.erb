<% provide :title, t(".payment_management") %>
<div class="sales-boxes">
  <div class="admin-manager box">
    <div class="title">
      <h1><%= t ".payment_management" %></h1>
    </div>
    <div class="admin-data">
      <table class="table table-categories table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col"><%= t ".id" %></th>
            <th scope="col"><%= t ".user_name" %></th>
            <th scope="col"><%= t ".create_at" %></th>
            <th scope="col"><%= t ".total" %></th>
            <th scope="col"><%= t ".status" %></th>
            <th scope="col"><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
              <%= render partial: "payment", collection: @payments %>
        </tbody>
      </table>
      <div id="pagy">
        <%== render partial: "shared/pagy", locals: { pagy: @pagy } %>
      </div>
      <div id="payment-content"></div>
    </div>
  </div>
</div>
