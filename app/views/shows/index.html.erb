<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <%= link_to root_path do %>
            <i class="fa fa-home"></i><%= t ".home" %>
          <% end %>
          <span><%= link_to @movie.title, movie_path(@movie.id) %></span>
          <span><%= t ".shows" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="blog-details spad">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8 search-date-form">
        <div class="blog__details__title">
          <%= form_tag(movie_shows_path(id: params[:movie_id]), class: "row d-flex justify-content-center", method: :get, remote: true) do |f| %>
            <%= hidden_field_tag :movie_id, @movie.id %>
            <div class="col-md-10">
              <%= date_field_tag :start_time, params[:start_time] || l(Time.now, format: :search) , class:"form-control", min: l(Time.now, format: :search) %>
            </div>
            <div class="col col-lg-2">
              <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-search search-book"></i>
                <span><%= t ".search" %></span>
              </button>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="blog__details__content">
          <div class="blog__details__comment">
            <h4><%= t ".shows_list" %></h4>
            <div class="blog__details__comment__item">
              <div class="blog__details__comment__item__text">
                <div class="detail-group-cinema">
                  <%= render partial: "cinemas/cinema", locals: {cinemas: @cinemas, show_times: @show_times, date: params[:start_time]&.to_datetime || Time.now } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
