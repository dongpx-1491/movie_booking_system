<div class="modal fade" id="payment-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <%= t ".order_detail" %>:
        </h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: "status_form", locals: {payment: payment} %>
        <div class="table-responsive table-striped">
          <table class=" table table-sm" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
              <tr>
                <th>STT</th>
                <th><%= t ".title" %></th>
                <th><%= t ".seat" %></th>
                <th><%= t ".cinema" %></th>
                <th><%= t ".room" %></th>
                <th><%= t ".date" %></th>
                <th><%= t ".start_time" %></th>
                <th><%= t ".price" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "tickets_detail", collection: @tickets,
                                            as: :ticket %>
            </tbody>
          </table>
        </div>
        <%= render partial: "total", locals: {payment: payment} %>
      </div>
    </div>
  </div>
</div>
