<% provide :title, t(".login") %>
<%= render partial: "shared/background_title", locals:{content: t(".log_in"), description: t(".p") } %>
<section class="login spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="login__form">
          <h3><%= t ".login"%></h3>
          <%= form_for :session, url: login_path, data: {turbo: false} do |f| %>
            <div class="input__item">
              <%= f.email_field :email, placeholder: t(".email"), class: "input-box" %>
              <span ><i class="fa-solid fa-envelope"></i></span>
            </div>
            <div class="input__item">
              <%= f.password_field :password, placeholder: t(".password"), class: "input-box" %>
              <span class="icon_key"><i class="fa-solid fa-key"></i></span>
            </div>
            <div>
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span class="white_a"><%= t ".remember_me" %></span>
              <% end %>
            </div>
            <%= f.submit t(".login"), class: "site-btn" %>
          <% end %>
          <%= link_to t(".forgot_password"), new_password_reset_path, class: "forget_pass white_a" %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="login__register">
          <h3><%= t ".new_user" %></h3>
          <%= link_to t(".sign_up_now"), signup_path, class: "primary-btn" %>
        </div>
      </div>
    </div>
  </div>
</section>
