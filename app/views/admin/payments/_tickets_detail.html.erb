<tr>
  <th><%= ticket_counter + 1 %></th>
  <th><%= ticket.show_time_movie.title %></th>
  <th><%= ticket.seat_position %></th>
  <th><%= ticket.show_time_room.cinema_name %></th>
  <th><%= ticket.show_time_room.name %></th>
