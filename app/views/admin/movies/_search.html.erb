<div class="overview-boxes">
  <div class="box-search">
    <%= search_form_for [:admin, @search], class: "input-group-form", method: "get" do |f| %>
      <div class="row width-100">
        <div class = "col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
          <%= f.label :title_or_description_cont, t(".search_by_name_or_description") %>
          <%= f.text_field :title_or_description_cont,
    placeholder: t(".search_by_name"), class: "form-control title-input" %>
        </div>
        <div class = "col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
          <%= f.label :categories_name_eq, t(".search_by_genre") %>
          <%= f.select :categories_name_eq, Category.all.pluck(:name),
    {:include_blank => true}, { class: "form-control title-input" } %>
        </div>
        <div class = "col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
          <%= f.label :release_time_eq, t(".search_by_release_date") %>
          <%= f.date_field :release_time_eq, include_blank: true, class:"form-control" %>
        </div>
      </div>
      <div class="row justify-content-center width-100 padding-top-10">
        <div class="col-md-1 col-md-offset-3">
          <%= f.submit t(".search"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
